{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
    <ul class="list-group">
        {% for item in items %}
        {% set post = item.post %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <a href="{{ path('app_post_show', {id: post.id}) }}" class="fw-bold text-decoration-none">{{ post.title }}</a>
                <div class="small text-muted">Last updated {{ post.updatedAt|date('M j, Y') }} by {{ post.user.email }}</div>
            </div>
            <span class="text-primary align-self-center fs-6"><i class="bi bi-chat-dots-fill"></i> {{ item.commentsCount }}</span>
        </li>
        {% else %}
            <li class="list-group-item text-center text-muted">No posts yet.</li>
        {% endfor %}
    </ul>
{% endblock %}
