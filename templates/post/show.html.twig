{% extends 'layout/one_column.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h1 class="fw-bold m-0">{{ post.title }}</h1>
            {% if app.user and app.user.id == post.owner.id %}
                <div class="d-flex align-items-center flex-nowrap">
                    <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn btn-link btn-sm p-0 me-3">Edit</a>
                    <form action="{{ path('app_post_delete', {id: post.id}) }}" method="post" style="display:inline" onsubmit="return confirm('Delete post?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_post' ~ post.id) }}">
                        <button type="submit" class="btn btn-link btn-sm text-danger p-0">Delete</button>
                    </form>
                </div>
            {% endif %}
        </div>
        <p class="text-muted mb-4">by {{ post.owner.email }}</p>
        <div class="small text-muted mb-3">Created: {{ post.createdAt|date('M j, Y H:i') }} <br> Updated: {{ post.updatedAt|date('M j, Y H:i') }}</div>
        <div class="mb-5">{{ post.content|nl2br }}</div>

        <div class="mb-4">
            <h5 class="mb-2">Leave a Comment</h5>
            {% if app.user %}
                {{ form_start(commentForm, { action: path('comment_new', {id: post.id}), method: 'POST', attr: { class: 'mb-2' }}) }}
                    {{ form_widget(commentForm.content) }}
                    {{ form_errors(commentForm.content) }} </br>
                    <button type="submit" class="btn btn-primary btn-sm">Post Comment</button>
                {{ form_end(commentForm) }}
            {% else %}
                <p><a href="{{ path('app_login') }}">Log in</a> to comment.</p>
            {% endif %}
        </div>

        <h5 class="mb-2">Comments</h5>
        <ul class="list-group list-group-flush">
            {% for comment in comments %}
            <li class="list-group-item py-2">
                <div class="d-flex justify-content-between align-items-start">
                    <strong>{{ comment.owner.email }}</strong>
                    {% if app.user and comment.owner.id == app.user.id %}
                        <div class="d-flex align-items-center flex-nowrap">
                            <a href="{{ path('comment_edit', {id: comment.id}) }}" class="btn btn-link btn-sm p-0 me-2">Edit</a>
                            <form action="{{ path('comment_delete', {id: comment.id}) }}" method="post" class="d-flex align-items-center m-0 p-0" onsubmit="return confirm('Delete this comment?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                <button type="submit" class="btn btn-link btn-sm text-danger p-0 mb-0">Delete</button>
                            </form>
                        </div>
                    {% endif %}
                </div>
                <div class="small text-muted">{{ comment.updatedAt|date('M j, Y H:i') }}</div>
                <div class="mt-1 small">{{ comment.content|nl2br }}</div>
            </li>
        {% else %}
            <li class="list-group-item py-2 text-center text-muted">No comments yet.</li>
        {% endfor %}
        </ul>
        <a href="{{ path('app_tag_all') }}" class="btn btn-link btn-sm mt-4">Back to posts</a>
    </div>
{% endblock %}
